<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="0"
    android:background="@color/light_gray"
    tools:context=".ui.driver.driver_info.DriverInfoFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Driver information"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/light_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Tran Minh Quang"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/vehicleTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Vehicle type: bike"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/vehiclePlateNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Plate number: 5634123"
                android:textColor="@color/white" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_star"
            android:gravity="center"
            android:padding="15dp"
            android:text="4.63"
            android:textColor="@color/green"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>